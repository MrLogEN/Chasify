<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="cz.charwot.chasify.controllers.RegisterController"
	alignment="CENTER"
	spacing="10"
	styleClass="root"
>
	<Label text="Register" styleClass="title-label" />

	<TextField fx:id="emailField" promptText="Email" styleClass="text-field" maxWidth="300" />
	<PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"
		maxWidth="300" />
	<PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
		styleClass="password-field" maxWidth="300" />

	<Button text="Register" onAction="#handleRegister" styleClass="button" maxWidth="300" />

	<Separator prefWidth="300" styleClass="separator" />

	<Button text="Login" onAction="#handleLogin" styleClass="button" maxWidth="300" />

	<Region VBox.vgrow="ALWAYS" />

	<Label fx:id="messageLabel" styleClass="message-label" maxWidth="300" />

</VBox>
