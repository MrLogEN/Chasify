<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="cz.charwot.chasify.controllers.LoginController"
	alignment="CENTER"
	spacing="10"
	styleClass="root"
>

	<Label text="Login" styleClass="title-label" />

	<TextField fx:id="emailField" promptText="Email" styleClass="text-field" maxWidth="300" />
	<PasswordField fx:id="passwordField" promptText="Password" styleClass="password-field"
		maxWidth="300" />

	<Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="button"
		maxWidth="300" />

	<!-- Separator before Register button -->
	<Separator prefWidth="300" styleClass="separator" />

	<Button fx:id="registerButton" text="Register" onAction="#handleRegister"
		styleClass="button" maxWidth="300" />

	<!-- Spacer to push the messageLabel down -->
	<Region VBox.vgrow="ALWAYS" />

	<Label fx:id="messageLabel" styleClass="message-label" maxWidth="300" />

</VBox>

